<%= form_for [@box, @box.products.new] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "title" %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "description"%>

  <%= f.label :price %>
  <%= f.number_field :price, placeholder:"price" %>

  <%= f.label :image_url %>
<%= f.text_field :image, placeholder: "image_url" %>

  <div class="actions">
      <%= f.submit "Add new product", class: "btn btn-success" %>
  </div>

<% end %>

