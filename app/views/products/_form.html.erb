<%= form_for [@box, @box.products.new] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :image_url %>
  <%= f.text_field :image %>

  <div class="actions">
      <%= f.submit "Add new product", class: "btn btn-success" %>
  </div>

<% end %>
